[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    data,
    logs,
    refer,
    scripts
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (in __init__.py files)
per-file-ignores =
    __init__.py:F401
max-complexity = 10
docstring-convention = google 